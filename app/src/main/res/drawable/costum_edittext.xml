<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop shadow effect -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#60000000" /> <!-- Shadow color -->
            <corners android:radius="25dp" /> <!-- Rounded corners for shadow -->
        </shape>
    </item>

    <!-- EditText background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- EditText background color -->
            <corners android:radius="25dp" /> <!-- Rounded corners for EditText -->
        </shape>
    </item>
</layer-list>
