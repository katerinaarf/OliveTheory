<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Light drop shadow effect -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#22000000" /> <!-- Light shadow color -->
            <corners android:radius="25dp" /> <!-- Rounded corners for shadow -->
        </shape>
    </item>

    <!-- Button background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4B7A5D" /> <!-- Button color -->
            <corners android:radius="25dp" /> <!-- Rounded corners for button -->
        </shape>
    </item>
</layer-list>
