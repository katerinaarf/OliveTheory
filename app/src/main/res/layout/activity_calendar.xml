<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/second"
    tools:context=".MenuActivity">

    <ImageButton
        android:id="@+id/calendar_second"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/calendar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="Ημερολόγιο  "
        android:textSize="30dp"
        android:textColor="@color/ic_launcher_background"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/calendar_second"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/user"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/userprof"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp" />


    <TextView
        android:id="@+id/suggest"
        android:layout_width="237dp"
        android:layout_height="41dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text="Προτείνεται Σήμερα"
        android:background="@drawable/custom_button"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendar_second" />



    <LinearLayout
        android:id="@+id/bottom_icons"
        android:layout_width="389dp"
        android:layout_height="134dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageButton
            android:id="@+id/calendar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/calendar" />

        <View
            android:layout_width="16dp"
            android:layout_height="134dp" />


        <ImageButton
            android:id="@+id/weather"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/weather" />


        <View
            android:layout_width="15dp"
            android:layout_height="98dp" />


        <ImageButton
            android:id="@+id/problems"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/question" />


        <View
            android:layout_width="17dp"
            android:layout_height="98dp" />

        <ImageButton
            android:id="@+id/message"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/message" />


        <View
            android:layout_width="20dp"
            android:layout_height="103dp" />

        <ImageButton
            android:id="@+id/forum"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/forum" />

    </LinearLayout>



    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="368dp"
        android:layout_height="269dp"
        android:layout_marginTop="48dp"
        android:theme="@style/CalenderViewCustom"
        android:weekDayTextAppearance="@style/CalenderViewWeekCustomText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/suggest" />

    <TextView
        android:id="@+id/history_work"
        android:layout_width="237dp"
        android:layout_height="41dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="152dp"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@drawable/custom_button"
        android:text="Ιστορικό Εργασιών"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarView" />

</androidx.constraintlayout.widget.ConstraintLayout>

