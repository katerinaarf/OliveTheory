<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/second"
    tools:context=".MenuActivity">

    <!-- Horizontal LinearLayout to place buttons in a row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="660dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/settings"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/settings" />

        <!-- Spacer to add margin between buttons -->
        <View
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/user"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/userprof" />

    </LinearLayout>

    <!-- Bottom icons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/calendar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/calendar" />

        <View
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/weather"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/weather" />

        <View
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/problems"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/olivetheory" />

        <View
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/message"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/message" />

        <View
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/forum"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/forum" />
    </LinearLayout>

</LinearLayout>
