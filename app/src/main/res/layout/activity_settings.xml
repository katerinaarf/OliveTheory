<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/second"
    tools:context=".SettingsActivity">

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/settings"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="Ρυθμίσεις  "
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/first"
        app:layout_constraintStart_toEndOf="@+id/settings"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/user"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/userprof"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp" />

    <!-- Bottom icons -->

    <TextView
        android:id="@+id/usertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="Ο Λογαριασμός μου  >"
        android:textStyle="bold"
        android:textColor="@color/first"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Η Τοποθεσία μου   >"
        android:textStyle="bold"
        android:textColor="@color/first"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usertext" />

    <TextView
        android:id="@+id/history_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ιστορικό Εργασιών   >"
        android:textColor="@color/first"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="340dp" />

    <TextView
        android:id="@+id/center_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Κέντρο Πληροφοριών   >"
        android:textStyle="bold"
        android:textColor="@color/first"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/history_work" />


    <LinearLayout
        android:id="@+id/bottom_icons"
        android:layout_width="389dp"
        android:layout_height="134dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageButton
            android:id="@+id/calendar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/calendar" />

        <View
            android:layout_width="16dp"
            android:layout_height="134dp" />


        <ImageButton
            android:id="@+id/weather"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/weather" />


        <View
            android:layout_width="15dp"
            android:layout_height="98dp" />


        <ImageButton
            android:id="@+id/problems"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/question" />


        <View
            android:layout_width="17dp"
            android:layout_height="98dp" />

        <ImageButton
            android:id="@+id/message"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/message" />


        <View
            android:layout_width="20dp"
            android:layout_height="103dp" />

        <ImageButton
            android:id="@+id/forum"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/forum" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
