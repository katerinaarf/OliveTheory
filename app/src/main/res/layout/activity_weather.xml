<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/second">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Καιρός"
        android:textColor="@color/first"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/weather_title"
        android:layout_marginTop="64dp"/>

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Εισάγετε Τοποθεσία"
        android:layout_below="@id/weather_title"
        android:layout_margin="16dp" />

    <TextView
        android:id="@+id/searchButton"
        android:layout_width="189dp"
        android:layout_height="45dp"
        android:layout_below="@id/searchEditText"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="111dp"
        android:background="@drawable/custom_button"
        android:gravity="center"
        android:text="Αναζήτηση"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchButton"
        android:layout_marginTop="16dp"
        android:text="Τοποθεσία"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/temperatureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationTextView"
        android:layout_marginTop="8dp"
        android:text="Θερμοκρασία"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/humidityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/temperatureTextView"
        android:layout_marginTop="8dp"
        android:text="Υγρασία"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/savedloc"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@id/humidityTextView"
        android:layout_marginTop="24dp"
        android:text="Αποθηκευμένες Τοποθεσίες"
        android:background="@drawable/custom_button"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <ListView
        android:id="@+id/savedLocationsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/savedloc"
        android:layout_marginTop="8dp"
        android:divider="@null"/>

</RelativeLayout>
